<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="row">
          <div class="col-md-6 col-md-offset-3 post_image_form">
            <div class="section-title-wrapper style-1 v1">
              <h3 class="section-title section-title-sm left">
                <span>投稿作成フォーム</span>
              </h3>
            </div>
            <div class="form-body">

            <%= form_for @post, url: posts_path do |f| %>
              



                    <%= f.label :title, 'タイトル：' %>
                    <%= f.text_field :title, autofocus: true, class:"form-control", placeholder:"レスポンス" %>

                  <div class="form-group has-icon">
                    <%= f.label :category, 'カテゴリ：' %>
                    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :category_name) do |g| %>

                      <%= g.label do %>
                        <%= g.check_box %>
                        <%= g.text %>
                      <% end %>

                    <% end %>
                  </div>
                  <div class="form-group has-icon">
                    <%= f.label :body, '本文：' %>
                    <%= f.text_area :body, autofocus: true, class:"form-control", placeholder:"レスポンス" %>
                  </div>



              <hr>

              <%= f.submit "登録", class: "btn btn-lg btn-block btn-base-1 mt-20" %>

            <% end %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>